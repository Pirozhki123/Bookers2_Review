<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th><%= link_to user.followings.count, user_followings_path(user) %></th> <!--フォロー数を表示。クリックすると一覧ページへ-->
  </tr>
  <tr>
    <th>followers</th>
    <th><%= link_to user.followers.count, user_followers_path(user) %></th> <!--フォロワー数を表示。クリックすると一覧ページへ-->
  </tr>
</table>

<div class='row'>
  <% if current_user != user %> <!--現在のユーザーがページのユーザーと違う場合-->
    <td><%= render "relationships/btn", user: user %></td> <!--フォローボタンを表示-->
  <% else %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% end %>
</div>