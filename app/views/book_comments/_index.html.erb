<table>
  <tbody>
      <% book.book_comments.each do |book_comment| %> <!--特定ブックのコメントを順番に取り出す-->
      <tr>

        <td>
          <%= link_to user_path(book_comment.user) do %> <!--コメントしたユーザーへのリンクを作成-->
            <%= image_tag book_comment.user.get_profile_image, size: "100x100" %><br> <!--get_profile_imageメソッドで100x100の画像を表示-->
            <%= book_comment.user.name %> <!--ユーザーネームを表示-->
          <% end %>
        </td>
        <td><%= book_comment.comment %></td> <!--コメントを表示-->
        <td>
          <% if book_comment.user == current_user %> <!--もしコメントが現在のログインユーザーのものならば-->
            <%= link_to "Destroy", book_book_comment_path(book, book_comment), method: :delete, class: "btn btn-danger pull-right" %> <!--削除ボタンを表示-->
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>