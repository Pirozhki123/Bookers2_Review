<% if user_signed_in? %> <!--サインインしている場合-->
  <%= form_with url: search_path, method: :get, local: true do |f| %> <!--検索フォームを表示-->
    <%= f.text_field :content %> <!--検索ワード-->
    <%= f.select :model, options_for_select({ "User" => "user", "Book" => "book" }) %> <!--ユーザー検索かブック検索を選択-->
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }) %> <!--検索条件を指定-->
    <%= f.submit '検索' %> <!--検索ボタン-->
  <% end %>
<% end %>